.ui.menu.navbar {
  border-radius: 0;

  .item {
    justify-content: center;
  }
}

.ui.photo {
  margin-bottom: 60px;

  .photo__header {
    display: flex;
    align-items: center;
  }

  .photo__date {
    color: grey;
    font-weight: normal;
    text-align: right;
    flex: 1;
  }

  .photo__likes {
    margin-top: 0.5em;
    font-weight: bold;
    user-select: none;

    .icon {
    cursor: pointer;
    }
  }

  .photo__description {
    margin: 1em 0;
    font-weight: bold;
    font-style: italic;
  }

  @media only screen and (max-width: 425px) {
    padding-left: 0;
    padding-right: 0;
    border-left: 0;
    border-right: 0;

    .photo__header, .photo__footer {
      padding-left: 1em;
      padding-right: 1em;
    }

  }
}

.feedPage {
  display: flex;
  flex-direction: column;
  align-items: center;

  .feedContainer {
    max-width: 500px;
  }
}

.ui.button.addPhotoButton {
  position: fixed;
  right: 1em;
  bottom: 1em;
}